<div class="container mx-auto">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1><%= @restaurant.name %></h1>
    </div>

    <h3>Details:</h3>
    <p>Address: <%= @restaurant.address %></p>
    <p>Tel: <%= @restaurant.phone_number %></p>
    <p>Category: <%= @restaurant.category %></p>
  </div>

  <h3>Reviews:</h3>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
  <% @restaurant.reviews.each do |review| %>
    <div class="d-flex row border rounded border-dark mt-1">
      <p class="col-3"><%= review.rating %> / 5</p>
      <p class="col-9"><%= review.content %></p>
    </div>
  <% end %>

  <div class="container">
  <h1>New Review for: <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating  %>

    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>

</div>
